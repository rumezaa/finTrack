{
    "name": "CashCorn",
    "version": "1.0.0",
    "description": "Stop spending yo money",
    "manifest_version": 3,
    "author": "",
    "action": {
        "default_popup": "../index.html"
    },
    "permissions": [
        "scripting",
        "storage",
        "activeTab" 
    ],
    "host_permissions": [
        "https://*/*"
    ],
    "icons": {
        "32": "CashCorn.png"
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  }
}